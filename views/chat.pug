html
	head
		title Chat Room - #{name}
		script(src = "https://cdnjs.cloudflare.com/ajax/libs/p5.js/1.0.0/p5.min.js")
		script(src = "https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.1.1/socket.io.js")
		script(src = "static/app.js")
		link(rel="stylesheet" href="static/style.css")
	body
		div#app
			div#canvas_div
			div#message_form_container
				div.form_message
					div.message_input
						lable(for = "message") 
						input#inputsubmit(name = "message" autofocus onkeypress="submit_form_enter(event)")
					div.send_message_button
						input#btnsubmit(type="button" value="Send!" onclick="submit_form()")
							
